<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragment.FoodMapFragment">
        </fragment>

        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="9dp"
            app:layout_constraintTop_toTopOf="parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputFoodName"
                android:hint="Enter food name"
                android:background="@color/white"
                android:textStyle="bold"
                android:padding="5dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_find"
                android:layout_gravity="bottom"
                android:text="Find Restaurants"
                android:textColor="#FFFFFF"
                android:backgroundTint="#35B64F"
                android:textStyle="bold"/>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="112dp"
            android:backgroundTint="#35B64F"
            android:src="@drawable/ic_location"
            app:layout_constraintTop_toBottomOf= "@id/search_layout"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/recycler_view"
            app:layout_constraintBottom_toBottomOf ="parent"
            android:layout_margin="2dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:background="@color/white"
            android:visibility="gone"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/btn_exit"
            android:text="Exit"
            android:layout_marginRight="8dp"
            android:backgroundTint="#35B64F"
            android:visibility="gone"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/btn_stop"
            android:text="Stop"
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/red"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/store_detail"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten Quan"
                android:maxLines="2"
                android:layout_margin="3dp"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/store_detail_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rating:"
                android:layout_margin="3dp"
                android:id="@+id/store_detail_rating"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dia Chi"
                android:layout_margin="3dp"
                android:id="@+id/store_detail_loca"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="opening"
                android:layout_margin="3dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/store_detail_openinghour"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="back"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#35B64F"
                    android:id="@+id/btb_back"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direction"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#35B64F"
                    android:id="@+id/btn_direction"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>