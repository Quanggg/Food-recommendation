<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/btn_background"
    android:elevation="40dp"
    android:orientation="horizontal"
    android:paddingVertical="8dp">

    <LinearLayout
        android:id="@+id/textGroupLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rvItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/pacifico_regular"
            android:textColor="#f28038"
            android:textSize="35sp"
            tools:text="Bun dau mam tom" />

        <TextView
            android:id="@+id/rvItemOrigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/cormorantgaramond_medium"
            android:textAllCaps="true"
            tools:text="Origin" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="10dp"
        android:layout_marginRight="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="400dp">

        <ImageView
            android:id="@+id/rvItemImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="#D0E37F"
            android:scaleType="centerCrop"
            tools:src="@drawable/spaghetti_0" />

    </androidx.cardview.widget.CardView>

</LinearLayout>