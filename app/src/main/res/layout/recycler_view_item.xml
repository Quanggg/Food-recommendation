<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/btn_background"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="20dp"
    android:paddingHorizontal="8dp"
    android:elevation="40dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rvItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="35sp"
            tools:text="Bun dau mam tom"
            android:fontFamily="@font/pacifico_regular"
            android:textColor="#f28038"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            tools:text="Origin"
            android:textAllCaps="true"
            android:fontFamily="@font/cormorantgaramond_medium"
            android:id="@+id/rvItemOrigin"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="400dp"
        android:elevation="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/spaghetti_0"
            android:scaleType="centerCrop"
            android:background="#D0E37F"
            android:id="@+id/rvItemImage" />

    </androidx.cardview.widget.CardView>

</LinearLayout>