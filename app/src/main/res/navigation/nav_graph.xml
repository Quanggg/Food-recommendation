    android:id="@+id/nav_graph"
    app:startDestination="@id/introductionFragment">

    <fragment
        android:id="@+id/introductionFragment"
        android:name="com.example.foodrecommendation.fragment.IntroductionFragment"
        android:label="fragment_introduction"
        tools:layout="@layout/fragment_introduction" >
        <action
            android:id="@+id/action_introductionFragment_to_wheelFragment"
            app:destination="@id/wheelFragment" />
    </fragment>
    <fragment
        android:id="@+id/foodDetailFragment"
        android:name="com.example.foodrecommendation.fragment.FoodDetailFragment"
        android:label="fragment_food_detail"
        tools:layout="@layout/fragment_food_detail" />
    <fragment
        android:id="@+id/wheelFragment"
        android:name="com.example.foodrecommendation.fragment.WheelFragment"
        android:label="fragment_wheel"
        tools:layout="@layout/fragment_wheel" />
    <fragment
        android:id="@+id/foodListFragment"
        android:name="com.example.foodrecommendation.fragment.FoodListFragment"
        android:label="fragment_food_list"
